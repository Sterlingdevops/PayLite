<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="108dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_light_blue_outline"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/delete"
            android:textAlignment="center"
            android:textColor="@color/scarlet"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_light_blue_outline"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/choose_contact"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:paddingEnd="0dp"
            android:paddingLeft="56dp"
            android:paddingRight="0dp"
            android:paddingStart="56dp"
            android:text="@string/choose_contact"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@null"
            app:layout_constraintBottom_toTopOf="@+id/contact_amount"
            app:layout_constraintEnd_toEndOf="@+id/choose_contact"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chevron_down"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@null"
            android:tint="@color/denim"
            app:layout_constraintBottom_toTopOf="@+id/contact_amount"
            app:layout_constraintStart_toStartOf="@+id/choose_contact"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile"/>

        <View
            android:id="@+id/view10"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/denim_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/choose_contact"/>

        <EditText
            android:id="@+id/contact_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/input_an_amount_to_split"
            android:inputType="number"
            android:padding="16dp"
            android:paddingEnd="0dp"
            android:paddingLeft="56dp"
            android:paddingRight="0dp"
            android:paddingStart="56dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view10"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@null"
            android:tint="@color/denim"
            app:layout_constraintBottom_toBottomOf="@+id/contact_amount"
            app:layout_constraintStart_toStartOf="@+id/contact_amount"
            app:layout_constraintTop_toTopOf="@id/contact_amount"
            app:srcCompat="@drawable/icon_cash"/>

    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>