<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.sterlingng.paylite.utils.widgets.SquareImageView
        android:id="@+id/charity_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/charity_type"
        app:layout_constraintStart_toStartOf="@+id/charity_name"
        app:layout_constraintTop_toTopOf="@+id/charity_name"
        app:srcCompat="@drawable/send_money"/>

    <TextView
        android:id="@+id/charity_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="top"
        android:paddingEnd="0dp"
        android:paddingStart="56dp"
        android:paddingTop="8dp"
        android:text="@string/red_cross_society"
        android:textColor="@color/blue_black_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/charity_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingEnd="0dp"
        android:paddingStart="56dp"
        android:text="@string/health"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charity_name"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/charity_type"
        app:layout_constraintEnd_toEndOf="@+id/charity_name"
        app:layout_constraintTop_toTopOf="@+id/charity_name"
        app:srcCompat="@drawable/chevron_right"/>

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/send_money"
        app:layout_constraintStart_toStartOf="@+id/charity_logo"
        app:layout_constraintTop_toBottomOf="@+id/charity_type"/>
</android.support.constraint.ConstraintLayout>