<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:src="@color/apple_green"
        app:layout_constraintBottom_toBottomOf="@+id/contact_name"
        app:layout_constraintStart_toStartOf="@+id/contact_name"
        app:layout_constraintTop_toTopOf="@+id/contact_name"/>

    <TextView
        android:id="@+id/contact_name"
        style="@style/MyAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingEnd="0dp"
        android:paddingLeft="48dp"
        android:paddingRight="0dp"
        android:paddingStart="48dp"
        android:text="@string/recipient_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/contact_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_settings_item"
        android:padding="16dp"

        android:paddingEnd="0dp"
        android:paddingLeft="48dp"
        android:paddingRight="0dp"
        android:paddingStart="48dp"
        android:text="@string/phone_2348124329064"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"/>

    <TextView
        android:id="@+id/contact_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/background_settings_item"
        android:padding="16dp"
        android:paddingEnd="0dp"
        android:paddingLeft="48dp"
        android:paddingRight="0dp"
        android:paddingStart="48dp"
        android:text="@string/email_rtukpe_gmail_com"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_phone"/>

</android.support.constraint.ConstraintLayout>