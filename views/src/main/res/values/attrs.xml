<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="labelBackground" format="reference"/>
    <attr name="hintBackground" format="reference"/>
    <attr name="drawable" format="reference"/>
    <attr name="maxLength" format="integer"/>
    <attr name="chevron" format="boolean"/>
    <attr name="textColor" format="color"/>
    <attr name="label" format="string"/>
    <attr name="hint" format="string"/>

    <declare-styleable name="TitleLabelTextView">
        <attr name="title"/>
        <attr name="label"/>
    </declare-styleable>

    <declare-styleable name="TitleLabelIconView">
        <attr name="drawable"/>
        <attr name="title"/>
        <attr name="label"/>
    </declare-styleable>

    <declare-styleable name="TitleIconView">
        <attr name="android:textSize"/>
        <attr name="drawable"/>
        <attr name="chevron"/>
        <attr name="title"/>
    </declare-styleable>

    <declare-styleable name="LargeLabelEditText">
        <attr name="android:background"/>
        <attr name="android:inputType"/>
        <attr name="android:enabled"/>
        <attr name="android:text"/>
        <attr name="textColor"/>
        <attr name="maxLength"/>
        <attr name="drawable"/>
        <attr name="label"/>
        <attr name="hint"/>
    </declare-styleable>

    <declare-styleable name="LargeLabelClickToSelectEditText">
        <attr name="android:drawableTint"/>
        <attr name="android:text"/>
        <attr name="textColor"/>
        <attr name="drawable"/>
        <attr name="label"/>
        <attr name="hint"/>
    </declare-styleable>

    <declare-styleable name="BottomNavigationBehavior_Params">
        <attr name="tabLayoutId" format="reference"/>
    </declare-styleable>

    <style name="HelperTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/denim_light</item>
    </style>
</resources>